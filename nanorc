# -----------------------------------------------------------------------------
# ~zozo/.config/nanorc
# say hello: printf "zozo\x40inescapable\x2eorg"
# -----------------------------------------------------------------------------

# -- Options --

# Do not report errors in this file.
set quiet

# Use auto-indentation.
set autoindent

# Create backup files
set backup
set backupdir $HOME/tmp/nano

# The characters treated as closing brackets when justifying paragraphs.
set brackets "\"')>]}"

# Use cut to end of line by default.
set cut

# Wrap lines at column n. If n â‰¤ 0, wrap lines at $COLUMNS-n.
set fill -4

# Opening and closing brackets that can be found by bracket searches.
set matchbrackets "(<[{)>]}"

# Convert files from DOS/Mac format.
unset noconvert

# Add newlines to the ends of files.
unset nonewlines

# Wrap text.
unset nowrap

# Statusbar messages will disappear after 1 keystroke instead of 26.
set quickblank

# Make the Home key smarter.
set smarthome

# Enable soft line wrapping (AKA full line display).
set softwrap

# Use this spelling checker instead of the internal one.
set speller "/usr/local/bin/aspell -c -x"

# Allow nano to be suspended.
set suspend

# Use this tab size instead of the default; it must be greater than 0.
set tabsize 4

# Convert typed tabs to spaces.
set tabstospaces

# Detect word boundaries more accurately by treating punctuation characters as parts of words.
set wordbounds

# -- Keybindings --

bind ^H     help        all
bind ^Y     uncut       all
bind ^F     pageup      all
bind ^B     pagedown    all
bind M-<    firstline   all
bind M->    lastline    all
bind M-F    nextword    all
bind M-B    prevword    all

unbind ^H               all

# -- Syntax files --

#include "/usr/local/share/nano/perl.nanorc"
#include "/usr/local/share/nano/php.nanorc"
#include "/usr/local/share/nano/tex.nanorc"
#include "/Users/zozo/share/nano/awk.nanorc"
#include "/Users/zozo/share/nano/css.nanorc"
#include "/Users/zozo/share/nano/default.nanorc"
#include "/Users/zozo/share/nano/email.nanorc"
#include "/Users/zozo/share/nano/html.nanorc"
#include "/Users/zozo/share/nano/ini.nanorc"
#include "/Users/zozo/share/nano/javascript.nanorc"
#include "/Users/zozo/share/nano/makefile.nanorc"
#include "/Users/zozo/share/nano/man.nanorc"
#include "/Users/zozo/share/nano/markdown.nanorc"
#include "/Users/zozo/share/nano/nanorc.nanorc"
#include "/Users/zozo/share/nano/patch.nanorc"
#include "/Users/zozo/share/nano/python.nanorc"
#include "/Users/zozo/share/nano/ruby.nanorc"
#include "/Users/zozo/share/nano/sed.nanorc"
#include "/Users/zozo/share/nano/sh.nanorc"
#include "/Users/zozo/share/nano/sql.nanorc"
#include "/Users/zozo/share/nano/xml.nanorc"
